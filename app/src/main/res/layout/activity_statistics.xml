<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/musician_color"
    tools:context=".musician.StatisticsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/spinnerGraphSelection_CV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp">
    <Spinner
        android:id="@+id/spinnerGraphSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/graph_options"
        android:padding="10dp"
        android:background="@color/white"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/graph_cv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerGraphSelection_CV"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >
        <TextView
            android:id="@+id/tv_graph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listener Growth"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:elevation="50dp"
            android:textSize="24sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>
        <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@id/spinnerGraphSelection_CV"
        android:padding="10dp"
        />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>